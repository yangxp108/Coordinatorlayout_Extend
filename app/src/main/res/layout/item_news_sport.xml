<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="5dp"></View>
    <RelativeLayout
        android:id="@+id/item_sport_layout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <!--android:background="?android:attr/itemBackground"-->

        <TextView
            android:id="@+id/tv_news_society_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_news_society"
            android:layout_toRightOf="@+id/iv_news_society"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="中石油:美国油价便宜因不含税"/>

        <TextView
            android:id="@+id/tv_news_summary_digest"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/iv_news_society"
            android:layout_alignLeft="@+id/tv_news_society_title"
            android:layout_below="@+id/tv_news_society_title"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="中国油价的48%交税了，美国价税分离，价是价，税是税。"/>

        <TextView
            android:id="@+id/tv_news_society_ptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news_society"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            tools:text="2016-02-19 08:09:19"/>

        <ImageView
            android:id="@+id/iv_news_society"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:transitionName="photos"
            tools:src="@mipmap/ic_launcher"
            android:layout_marginLeft="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="5dp"></View>
</LinearLayout>
